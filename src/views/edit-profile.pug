extends base 

block content
  h4=errorMsg
  div.profile__data
    if isHeroku
      img.avatar(src=loggedInUser.avatarUrl width=120 height=155)
    else 
      img.avatar(src="/" + loggedInUser.avatarUrl width=120 height=155)
    h1=loggedInUser.name
  form(method="POST" enctype='multipart/form-data').edit-profile__form
    label(for="avatar") 프로필 사진 
    input(type="file" id='avatar' name='avatar' accept='image/*') 
    input(name='username' type="text" required  placeholder='사용자 아이디' value=loggedInUser.username)
    input(name='name' type="text" required placeholder='이름' value=loggedInUser.name)
    input(name='email' type="email" required  placeholder='이메일' value=loggedInUser.email)
    input(name='location' type="text" required placeholder='주소'  value=loggedInUser.location)
    button 변경
    
    if !loggedInUser.socialOnly
      hr
      a(href="/users/change-password") 비밀번호 변경 &rarr;